<mvc:View
    controllerName="sapui5test.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					<Title text="{/joke}"></Title>
					<Button
						id="helloButton"
						type="Emphasized"
						icon="sap-icon://alert"
						text="ALERT"
						press="onShowHello"
						class="sapUiSmallMargin"/>

					<Button
						icon="sap-icon://post"
						text="Get Joke"
						press="onCallAPI"
						class="sapUiSmallMargin"/>

					<Button
						text="Pop-up"
						icon="sap-icon://hint"
						class="sapUiSmallMargin"
						press=".onInfoMessageBoxPress"
						 />
					<List id="restdata"  />

					 <mvc:XMLView viewName="sapui5test.view.ProcessFlow"/>

					</content>
				</Page>
			</pages>

		</App>
	</Shell>
</mvc:View>
